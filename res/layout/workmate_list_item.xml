<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

<!--         android:background="@drawable/workmate_head_selector" -->
    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_workmatelist_item" >

        <ImageView
            android:id="@+id/list_head_img"
            android:layout_width="52dp"
            android:layout_height="52dp" 
            android:layout_margin="8dp"
            android:contentDescription="@null"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_head_img" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/black_xiangya"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/tvTitle"
                android:textSize="14sp" />
            
        </RelativeLayout>
        
        <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line"
                android:layout_below="@id/list_head_img" />
        
    </RelativeLayout>

</LinearLayout>